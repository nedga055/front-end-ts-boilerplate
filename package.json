{
	"name": "front-end-boilerplate-ts",
	"version": "1.0.0",
	"description": "Boilerplate for front end typescript applications ",
	"main": "index.js",
	"scripts": {
		"dev": "next dev -p 7890",
		"build": "next build",
		"start": "NODE_ENV=production next start -p 7890",
		"test": "jest",
		"postinstall": "npx next telemetry disable"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nedga055/front-end-boilerplate-ts.git"
	},
	"keywords": [
		"next",
		"react",
		"typescript",
		"eslint",
		"prettier"
	],
	"author": "Nick Edgar",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/nedga055/front-end-boilerplate-ts/issues"
	},
	"homepage": "https://github.com/nedga055/front-end-boilerplate-ts#readme",
	"dependencies": {
		"@babel/preset-react": "^7.12.10",
		"@babel/preset-typescript": "^7.12.7",
		"@chakra-ui/icons": "^1.0.0",
		"@chakra-ui/react": "^1.3.2",
		"@emotion/babel-plugin": "^11.0.0",
		"@emotion/css": "^11.0.0",
		"@emotion/react": "^11.0.0",
		"@emotion/server": "^11.0.0",
		"@emotion/styled": "^11.0.0",
		"@types/jest": "^26.0.19",
		"@types/react-datepicker": "^3.1.3",
		"babel-jest": "^26.6.3",
		"babel-plugin-styled-components": "^1.11.1",
		"dompurify": "^2.2.6",
		"framer-motion": "^3.10.4",
		"i18next": "^19.8.3",
		"isomorphic-unfetch": "^3.1.0",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.3",
		"next": "^10.0.0",
		"next-i18next": "^8.1.2",
		"polished": "^3.6.7",
		"react": "^16.14.0",
		"react-datepicker": "^3.4.1",
		"react-dom": "^16.14.0",
		"react-i18next": "^11.7.3",
		"react-icons": "^3.11.0",
		"styled-components": "^5.2.1"
	},
	"devDependencies": {
		"@types/express": "^4.17.8",
		"@types/node": "^13.13.30",
		"@types/react": "^16.9.55",
		"@typescript-eslint/eslint-plugin": "^2.34.0",
		"@typescript-eslint/parser": "^2.34.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.21.5",
		"express": "^4.17.1",
		"husky": "^4.3.8",
		"prettier": "2.0.2",
		"typescript": "^3.9.7",
		"webpack": "^4.44.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npx tsc --project . && npx lint-staged"
		}
	},
	"lint-staged": {
		"./**/*.{js,jsx,ts,tsx}": [
			"eslint --quiet --fix",
			"prettier --write --config ./.prettierrc.js"
		]
	},
	"babel": {
		"env": {
			"development": {
				"presets": [
					"next/babel",
					"@babel/preset-react",
					"@babel/preset-typescript"
				],
				"plugins": [
					"@emotion",
					[
						"styled-components",
						{
							"ssr": true,
							"displayName": true
						}
					]
				]
			},
			"production": {
				"presets": [
					"next/babel"
				],
				"plugins": [
					[
						"styled-components",
						{
							"ssr": true,
							"displayName": true
						}
					]
				]
			},
			"test": {
				"presets": [
					[
						"next/babel",
						{
							"preset-env": {
								"modules": "commonjs"
							}
						}
					]
				],
				"plugins": [
					[
						"styled-components",
						{
							"ssr": true,
							"displayName": true
						}
					]
				]
			}
		}
	}
}
